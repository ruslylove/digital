{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run LaTeX",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "latex ${fileBasename}",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": true
            }
        },
        {
            "label": "Run dvisvgm",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "dvisvgm",
            "args": [
                "--no-fonts",
                "${fileBasenameNoExtension}.dvi",
                "-o",
                "../public/${fileBasenameNoExtension}.svg"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "close": true
            }
        },
        {
            "label": "Build LaTeX and Generate SVG (Sequential)",
            "dependsOn": [
                "Run LaTeX",
                "Run dvisvgm"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "true",
            "presentation": {
                "reveal": "never",
                "close": true
            },
            "problemMatcher": []
        }
    ]
}